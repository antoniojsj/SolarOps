{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "dist",
    "jsx": "react",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@figma"
    ],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "noEmitOnError": false
  },
  "include": [
    "src/**/*"
  ]
}
